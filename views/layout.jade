doctype html
html
	head
		title= title

		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(charset='UTF-8')

		block headerScripts
			link(rel="icon", href="/images/favicon.ico", type="image/x-icon")
			link(rel='stylesheet', href='/stylesheets/normalize.min.css')
			link(rel='stylesheet', href='/stylesheets/grid.min.css')
			link(rel='stylesheet', href='/stylesheets/main.css')
			link(rel='stylesheet', href='/stylesheets/autocomplete.css')
			script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
			script(src='https://code.jquery.com/ui/1.11.4/jquery-ui.js')
			//- script(src='/javascripts/ghostHunter.js')
			if type
				script(src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.7.8/jquery.fullPage.min.js")
				script(src='/javascripts/initHome.js')
			else
				script(src='/javascripts/init.js')
	body
		header#header.header
			.header-left
				.father.logo 
					if type
						a.navigate(href='#1')
							.turn
					else						
						a.navigate(href='/#{lang}')
							.turn
				.father.service
					span
						if type
							a.navigate(href='#4')= menu.father.services
						else
							a.navigate(href='/#{lang}/#4')= menu.father.services
					nav.menu
						ul
							each val, slug in menu.child
								li.child
									a(href='/#{lang}/#{slug}')=val
				.father 
					span
						if type
							a.navigate(href='#6')= menu.father.contact
						else
							a.navigate(href='/#{lang}/#6')= menu.father.contact
				.father.social
					a(href="")
						i(class="fa fa-facebook")
					a(href="")
							i(class="fa fa-twitter")
			.header-right
				.father.blog
					span
						a.navigate(href='/blog')= menu.father.blog 
				.arrow-right
		header#header-mobile.header-mobile
			.menu-wrapper
				.bread
					i.material-icons.ham menu
					i.material-icons.lettuce remove
					//- i.material-icons.lettuce arrow_back
					nav.mobile
						ul
							li.child
								span.dad= menu.father.services
							each val, slug in menu.child
								li.child
									a(href='/#{lang}/#{slug}')
										span= val
							li.child
								span.dad= menu.father.contact
							li.child.up
								i.material-icons.arrow-up keyboard_arrow_up
				.father.logo 
					a(href='/#{lang}/').turn
					.accent
				.father.service
					span= menu.father.blog
				.father(style="float:right;padding:0 .5em;")
					i.fa.fa-facebook
					i.fa.fa-twitter
		if type
			.super-wrapper#fullpage
				block content
		else
			block content
			
block footerScripts